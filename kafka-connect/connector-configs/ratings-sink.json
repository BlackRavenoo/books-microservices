{
    "name": "jdbc-sink-book-ratings",
    "config": {
        "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
        "tasks.max": "1",
        "topics": "pg.public.books",
        "connection.url": "jdbc:postgresql://postgres:5432/${RATINGS_DB_NAME}",
        "connection.user": "${POSTGRES_USER}",
        "connection.password": "${POSTGRES_PASSWORD}",
        "table.name.format": "book_rating_stats",
        "insert.mode": "insert",
        "pk.mode": "record_key",
        "pk.fields": "book_id",
        "fields.whitelist": "id",
        "transforms": "createKey,renameField,extractId",
        "transforms.createKey.type": "org.apache.kafka.connect.transforms.ValueToKey",
        "transforms.createKey.fields": "id",
        "transforms.renameField.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
        "transforms.renameField.renames": "id:book_id",
        "transforms.extractId.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
        "transforms.extractId.include": "id",
        "auto.create": "false",
        "auto.evolve": "false",
        "delete.enabled": "true",
        "tombstones.on.delete": "true"
    }
}